<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >



<LinearLayout
    android:id="@+id/rv_homecontent_linear"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:gravity="center_vertical"
    android:layout_marginTop="@dimen/spacing_large"
    android:layout_marginBottom="@dimen/spacing_large"
    android:orientation="horizontal"
    tools:ignore="UseCompoundDrawables">


    <com.easyplexdemoapp.util.GridItemImageView
        android:layout_width="5dp"
        android:layout_height="@dimen/pixel_20dp"
        android:background="@drawable/row"
        android:backgroundTint="@color/golden_gate"
        android:contentDescription="@string/image" />


    <TextView
        android:id="@+id/row_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/grey_11"
        android:textSize="12sp"
        app:fontFamily="sans-serif-black"
        />

    <TextView
        android:id="@+id/contentall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:gravity="end"
        android:text="@string/view_all"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/grey_60"
        android:textSize="12sp"
        app:fontFamily="sans-serif-black"

        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_expand_arrow"
        android:rotation="-90"
        android:gravity="center"
        android:minWidth="0dp"
        android:padding="5dp"
        android:backgroundTint="@color/main_color"
        tools:ignore="ContentDescription" />

</LinearLayout>


</layout>