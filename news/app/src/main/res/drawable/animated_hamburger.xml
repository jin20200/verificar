<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/closed"
        android:drawable="@drawable/ic_apps"
        android:state_checked="false"/>
    <item
        android:id="@+id/opened"
        android:drawable="@drawable/ic_close"
        android:state_checked="true"/>
    <transition
        android:drawable="@drawable/ic_arrow_back"
        android:fromId="@id/closed"
        android:toId="@id/opened"/>
    <transition
        android:drawable="@drawable/ic_apps"
        android:fromId="@id/opened"
        android:toId="@id/closed"/>
</animated-selector>