<!-- res/drawable/circle_progress.xml -->
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:toDegrees="360">

    <shape
        android:shape="ring"
        android:useLevel="true">

        <!-- Color of the progress circle -->
        <solid android:color="#2196F3" />

        <!-- Size of the progress circle -->
        <size
            android:width="8dp"
            android:height="8dp" />

        <!-- Thickness of the progress circle -->
        <stroke
            android:width="4dp"
            android:color="#FFFFFF" /> <!-- Border color, adjust as needed -->

    </shape>
</rotate>
