<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="controller"
            type="com.easyplexdemoapp.util.AppController" />
    </data>

    <FrameLayout
        android:orientation="vertical"
        android:id="@id/lyt_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.0dip"
        android:paddingStart="26.0dip"
        android:paddingEnd="4.0dip">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="110.0dip"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@id/rootLayout"
                android:background="@android:color/transparent"
                android:clipToPadding="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="6.0dip"
                app:cardElevation="0.0dip"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:id="@id/itemMovieImage"
                    android:background="@drawable/media_placeholder"
                    android:layout_width="fill_parent"
                    android:layout_height="172.0dip"
                    android:scaleType="centerCrop" />



                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="172.0dip"
                    android:background="@drawable/fragment_shadows_top"
                    android:visibility="@{controller.isShadowEnabled ? View.GONE : View.VISIBLE}"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/substitle"
                    android:textSize="9.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_gravity="start"
                    android:background="@drawable/bg_substitle"
                    android:paddingLeft="5.0dip"
                    android:layout_marginTop="20dp"
                    android:paddingRight="5.0dip"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="15.0dip"
                    android:text="genre" />


                <TextView
                    android:id="@+id/movie_premuim"
                    android:textSize="9.0sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:layout_gravity="start"
                    android:background="@drawable/bg_substitle_detail"
                    android:paddingLeft="5.0dip"
                    android:layout_marginTop="40dp"
                    android:paddingRight="5.0dip"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="15.0dip"
                    android:text="premuim" />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_marginBottom="3.0dip">

                <TextView
                    android:textSize="13.0sp"
                    android:textColor="@android:color/white"
                    android:ellipsize="end"
                    android:id="@id/movietitle"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:maxLines="1"
                    android:singleLine="true" />

                <TextView
                    android:textSize="12.0sp"
                    android:textColor="@color/grey_60"
                    android:id="@id/mrelease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2.0dip"
                    android:text="2021"
                    android:maxLength="4" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/mostrarTop10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            tools:ignore="MissingConstraints"
            android:visibility="visible">

            <com.easyplexdemoapp.util.Outline
                android:id="@+id/mgenres"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="2"
                android:padding="5dp"
                android:shadowColor="@color/white"
                android:textColor="#161616"
                android:textSize="60dp"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:layout_width="100.0dip"
                android:layout_height="80.0dip"
                android:layout_marginBottom="-2.0dip"
                android:scaleType="centerCrop"
                android:layout_marginStart="-55.0dip" />

        </FrameLayout>
    </FrameLayout>
</layout>