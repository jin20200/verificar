<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:id="@+id/epLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/main_content_episode"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:background="@color/transparent"
            android:minHeight="?attr/actionBarSize"
            android:orientation="horizontal">

            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/PlayButtonIcon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@android:color/transparent"
                android:src="@drawable/playbutton" />


            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/eptitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginEnd="@dimen/spacing_middle"
                android:text="@string/ep_n"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/grey_11"
                android:textSize="12sp" />

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/bt_expand"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="25dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_expand_arrow"
                app:tint="@color/main_color" />


            <ImageView
                android:id="@+id/downloadEpisode"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="15dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_download"
                app:tint="@color/main_color" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lyt_expand"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/upcoming_relative"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_marginTop="@dimen/pixel_10dp">

                <ImageView
                    android:id="@+id/epcover"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/image" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/fragment_shadows_top"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/image" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/fragment_shadows"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/image" />



                <ImageView
                    android:id="@+id/miniPlay"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/playbutton"
                    android:contentDescription="@string/image" />



                <TextView
                    android:id="@+id/time_remaning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:visibility="visible"
                    android:gravity="center_horizontal"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse"
                    android:textColor="#9b9ea3"
                    android:textSize="12sp" />



                <ProgressBar
                    android:id="@+id/resume_progress_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="bottom"
                    android:layout_alignParentBottom="true"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/content_detail_progress" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_20">


                    <TextView
                        android:id="@+id/eptitle_sub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="@color/grey_11"
                        android:textSize="12sp"
                        app:fontFamily="sans-serif-black" />
                    <TextView
                        android:id="@+id/eptitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/main_color"
                        android:layout_marginTop="3dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingStart="7dp"
                        android:paddingEnd="7dp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:textColor="@color/grey_11"
                        android:textSize="10sp"
                        app:fontFamily="sans-serif-black"
                        tools:text="@string/genre" />


                    <TextView
                        android:id="@+id/epoverview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/genre"
                        android:maxLength="200"
                        android:maxLines="2"
                        android:layout_marginBottom="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse"
                        android:textColor="@color/grey_11"
                        android:textSize="12sp" />


                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>
</layout>